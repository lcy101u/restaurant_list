<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="row">
          <div class="col-8 input-group">
            <input type="text" name="keyword" class="form-control form-control-lg" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <div class="col-4 form-group">
            <select name="" id="" class="form-control">
              <option>A > Z</option>
              <option>Z > A</option>
              <option>類別</option>
              <option>地區</option>
            </select>
          </div>
        </div> 
      </form>
    </div>
    <div class="d-flex justify-content-end mt-3">
      <a href="./restaurants/new" class="btn btn-warning" role="button">新增餐廳</a>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#if restaurants}}
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-footer d-flex justify-content-end">
              <a href="/restaurants/{{this._id}}/edit" type="button" class="btn btn-outline-primary btn-sm mr-2">Edit</a>
              <a href="/restaurants/{{this._id}}" type="button" class="btn btn-outline-info btn-sm mr-2">Detail</a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger btn-sm mr-0">Delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
    {{else}}
    <div class="col-md-10 col-12 mx-auto">
      <div class="d-flex flex-column justify-content-center align-items-center">
        <h1>Oops⋯</h1>
        <i class="far fa-sad-tear fa-10x"></i>
        <h2 class="mt-3">沒有符合搜尋結果的餐廳</h2>
        <p>試試看其他關鍵字吧！</p>
      </div>
    </div>
    {{/if}}
  </div>
</div>