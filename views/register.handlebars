<div class="container">
  <div class="row user-register">
    <div class="col-md-6 m-auto">
      <div class="card card-body border-primary">
        <h1 class="text-center mt-3">註冊</h1>
        <form action="/users/register" method="post">
          <div class="form-group">
            <label for="name">姓名</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="輸入姓名" value="{{name}}">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="輸入電子郵件" value="{{email}}">
          </div>
          <div class="form-group">
            <label for="password">密碼</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="密碼" value="{{password}}">
          </div>
          <div class="form-group">
            <label for="confirmPassword">確認密碼</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="確認密碼" value="{{confirmPassword}}">
          </div>
          <button type="submit" class="btn btn-primary btn-block">註冊</button>
        </form>
        <p class="lead mt-2">
          已有帳號? <a href="/users/login">登入</a>
        </p>
      </div>
    </div>
  </div>
</div>